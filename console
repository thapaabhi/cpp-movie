#include <iostream>
#include <fstream>
#include <sstream>
#include <string>
#include <vector>
#include <iomanip>
#include <cstdlib>  // Include cstdlib for system("CLS")
#include <algorithm>

using namespace std;

class Movie {
public:
    string name;
    int ratings;
    string feedback;
    bool completed;
    int hours;
    int minutes;

    Movie(const string& name, int ratings, const string& feedback, bool completed, int hours, int minutes)
        : name(name), ratings(ratings), feedback(feedback), completed(completed), hours(hours), minutes(minutes) {}
};

// Function to delete a movie from the file
void deleteMovie(const string& filename, int movieIndex, vector<Movie>& movies);

// Function to add a movie to the file
void addMovie(const string& filename) {
    ofstream file(filename, ios::app);

    if (!file.is_open()) {
        cout << "Error opening file for writing!" << endl;
        return;
    }

    string name, feedback;
    int ratings;
    bool completed;
    int hours, minutes;

    cin.ignore(); // Ignore newline character from previous input
    cout << "Enter the movie name: ";
    getline(cin, name);

    cout << "Enter the ratings (1-5): ";
    cin >> ratings;

    cin.ignore(); // Consume the newline character

    cout << "Enter your feedback: ";
    getline(cin, feedback);

    cout << "Have you completed the movie? (y/n): ";
    char completionChoice;
    cin >> completionChoice;

    if (completionChoice == 'y' || completionChoice == 'Y') {
        completed = true;
        hours = 0;
        minutes = 0;
    } else {
        completed = false;
        cout << "Enter the hours where you left off: ";
        cin >> hours;

        cout << "Enter the minutes where you left off: ";
        cin >> minutes;
    }

    Movie newMovie(name, ratings, feedback, completed, hours, minutes);

    file << newMovie.name << "|" << newMovie.ratings << "|" << newMovie.feedback << "|" << newMovie.completed << "|" << newMovie.hours << "|" << newMovie.minutes << endl;

    file.close();
}

// Function to view movies from the file
void viewMovies(const string& filename) {
    ifstream file(filename);

    if (!file.is_open()) {
        cout << "Error opening file for reading!" << endl;
        return;
    }

    vector<Movie> movies;
    string line;

    int sequenceNumber = 1; // Initialize sequence number
    system("CLS");
    cout << setw(5) << "Number" << setw(40) << "Movie Name" << endl;
    cout << "-----------------------------------------------------" << endl;

    while (getline(file, line)) {
        stringstream ss(line);
        string name, feedback;
        int ratings, hours, minutes;
        bool completed;

        getline(ss, name, '|');
        ss >> ratings;
        ss.ignore(); // Consume the delimiter
        getline(ss, feedback, '|');
        ss >> completed;
        ss.ignore(); // Consume the delimiter
        ss >> hours;
        ss.ignore(); // Consume the delimiter
        ss >> minutes;

        Movie movie(name, ratings, feedback, completed, hours, minutes);
        movies.push_back(movie);

        // Display sequence number and movie name
        cout << setw(5) << sequenceNumber << setw(40) << movie.name << endl;

        sequenceNumber++;
    }

    file.close();

    if (movies.empty()) {
        cout << "No movies found." << endl;
        return;
    }

    int choice;

    cout << endl << "Options:" << endl;
cout << "1. Delete Movie" << endl;
cout << "0. Go back" << endl << endl;
cout << "Enter your choice: ";
cin >> choice;

    if (choice >= 1 && choice <= movies.size()) {
        const Movie& selectedMovie = movies[choice - 1];
        system("CLS");
        cout << "Details for movie " << choice << ":" << endl;
        cout << "Name: " << selectedMovie.name << endl;
        cout << "Ratings: " << selectedMovie.ratings << endl << endl;
        cout << "Feedback: " << selectedMovie.feedback << endl << endl;

        if (selectedMovie.completed) {
            cout << "Status: Completed" << endl;
        } else {
            cout << "Status: Incomplete" << endl;
            cout << "Time where you left off: " << selectedMovie.hours << " hours and " << selectedMovie.minutes << " minutes" << endl;
        }

        // Additional options for deleting and going back
        cout << endl << "Options:" << endl;
        cout << "1. Delete Movie" << endl;
        cout << "0. Go back" << endl << endl;
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                // Delete Movie
                deleteMovie(filename, choice - 1, movies);
                break;
            case 0:
                // Go back
                break;
            default:
                cout << "Invalid choice. Going back to the main menu." << endl;
        }
    } else if (choice != 0) {
        cout << "Sorry, the number isn't valid. Please try again." << endl;
    }
}

// Function to delete a movie from the file
// Function to delete a movie from the file
void deleteMovie(const string& filename, int movieIndex, vector<Movie>& movies) {
    if (movieIndex >= 0 && movieIndex < movies.size()) {
        const Movie& selectedMovie = movies[movieIndex];

        cout << "Are you sure you want to delete the following movie?" << endl;
        cout << "Name: " << selectedMovie.name << endl;
        cout << "Ratings: " << selectedMovie.ratings << endl;
        cout << "Feedback: " << selectedMovie.feedback << endl;

        if (selectedMovie.completed) {
            cout << "Status: Completed" << endl;
        } else {
            cout << "Status: Incomplete" << endl;
            cout << "Time where you left off: " << selectedMovie.hours << " hours and " << selectedMovie.minutes << " minutes" << endl;
        }

        cout << "Enter 'y' to confirm deletion or 'n' to cancel: ";
        char deleteChoice;
        cin >> deleteChoice;

        if (deleteChoice == 'y' || deleteChoice == 'Y') {
            // Delete the movie from the vector
            movies.erase(movies.begin() + movieIndex);

            // Save the updated vector back to the file
            ofstream file(filename);

            if (!file.is_open()) {
                cout << "Error opening file for writing!" << endl;
                return;
            }

            // Save the updated vector
            for (const Movie& movie : movies) {
                file << movie.name << "|" << movie.ratings << "|" << movie.feedback << "|" << movie.completed << "|" << movie.hours << "|" << movie.minutes << endl;
            }

            file.close();

            cout << "Movie successfully deleted." << endl;

            // Display the remaining movies
            cout << "Remaining Movies:" << endl;
            for (size_t i = 0; i < movies.size(); ++i) {
                const Movie& movie = movies[i];
                cout << "Name: " << movie.name << ", Ratings: " << movie.ratings << ", Feedback: " << movie.feedback;
                if (movie.completed) {
                    cout << ", Status: Completed" << endl;
                } else {
                    cout << ", Status: Incomplete, Time where you left off: " << movie.hours << " hours and " << movie.minutes << " minutes" << endl;
                }
            }
        } else {
            cout << "Deletion canceled." << endl;
        }
    } else {
        cout << "Invalid movie number. Please try again." << endl;
    }
}


int main() {
    int choice;
    char continueChoice;

    do {
        cout << "Select language:" << endl;
        cout << "1. Bollywood" << endl;
        cout << "2. Hollywood" << endl;
        cout << "3. Nepali" << endl;
        cout << "0. Exit" << endl << endl << endl;
        cout << "Enter your choice: ";
        cin >> choice;
        cin.ignore(); // Consume the newline character

        if (choice >= 1 && choice <= 3) {
            string filename;

            switch (choice) {
                case 1:
                    filename = "bollywood.txt";
                    break;
                case 2:
                    filename = "hollywood.txt";
                    break;
                case 3:
                    filename = "nepali.txt";
                    break;
            }

            do {
                system("CLS");
                string filmindustry;
                filmindustry = filename.substr(0, filename.length() - 4);
                cout << filmindustry << endl << endl;
                cout << "Options:" << endl;
                cout << "1. Add Movie" << endl;
                cout << "2. View Movies" << endl;
                cout << "0. Go back to language selection" << endl << endl << endl;
                cout << "Enter your choice: ";
                cin >> choice;
                cin.ignore(); // Consume the newline character

                switch (choice) {
                    case 1:
                        addMovie(filename);
                        break;
                    case 2:
                        viewMovies(filename);
                        break;
                    case 0:
                        choice = -1; // Set to a value outside the valid range to trigger the outer loop to continue
                        break; // Go back to language selection
                    default:
                        cout << "Invalid choice. Please try again." << endl;
                }

                cout << endl << endl << "Do you want to continue for " << filmindustry << "? (y/n): ";
                cin >> continueChoice;
                cin.ignore(); // Consume the newline character
            } while (continueChoice == 'y' || continueChoice == 'Y');
        } else if (choice != 0) {
            cout << "Invalid choice. Please try again." << endl;
        }
    } while (choice != 0);

    cout << "Exiting program." << endl;

    return 0;
}
